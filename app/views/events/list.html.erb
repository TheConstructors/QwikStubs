<!-- nav bar for event -->
<ul class="nav nav-tabs">
  <li class="active"> <%= link_to "Event List", "/event" %> </li>
  <li> <%= link_to "Create", "/event/create" %> </li>
</ul>

<!-- end nav bar for event -->

<div class="span6 offset3">
  <div class="page-header">
    <h1>Events List</h1>
  </div>

  <% if @events.blank? %>
  <h2>There are no events at this time!</h2>


  <% else %>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Date</th>
      <tr>
    </thead>
    <tbody>
      <% x=0 %>
      <% @events.each do |e| %>
      <tr><td><%= x=x+1 %></td>
        <td><%= e.name %></td>
        <td><%= e.date %></td>
        <% end %>
    </tbody>
    </table>

<% end %>
</div>
